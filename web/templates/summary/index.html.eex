<h2>Summary</h2>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
<%= for line <- @lines do %>
    <tr>
      <td><%= Enum.at(line,0) %></td>
      <td><%= Float.to_string(Enum.at(line,1),[decimals: 2]) %></td>
    </tr>
<% end %>
  </tbody>
</table>
